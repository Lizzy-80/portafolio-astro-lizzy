---
import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Elizabeth Cruz Sánchez</h1>
			<p class="hero__text">
				Desarrolladora Web Jr enfocada en Front-end. Creo sitios responsivos con HTML, CSS, JavaScript y Astro.
			</p>
			<Boton href="#about" texto="Quiero saber más"/>
		</div>
    <img
		class="hero__img"
		src="/img/Imagen_Ely.png"
		alt="Elizabeth Cruz Sánchez"
		width="384"
    	height="384"
	/>
	</div>
</section>
